{
    "name": "back",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "drizzle:studio": "npx drizzle-kit studio --config ./src/drizzle/drizzle.config.ts",
        "drizzle:generate": "npx drizzle-kit generate --config ./src/drizzle/drizzle.config.ts",
        "drizzle:migrate": "npx drizzle-kit migrate --config ./src/drizzle/drizzle.config.ts",
        "drizzle:push": "npx drizzle-kit push --config ./src/drizzle/drizzle.config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^8.0.7",
        "@repo/contract": "workspace:*",
        "@ts-rest/core": "^3.51.0",
        "@ts-rest/nest": "^3.51.0",
        "@ts-rest/open-api": "^3.51.0",
        "@types/pg": "^8.11.10",
        "bcrypt": "^5.1.1",
        "drizzle-kit": "^0.28.0",
        "drizzle-orm": "^0.36.0",
        "pg": "^8.13.1",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.3.1",
        "@types/supertest": "^6.0.0",
        "eslint": "^9.13.0",
        "globals": "^15.9.0",
        "jest": "^29.5.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3",
        "typescript-eslint": "^8.7.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.{js, jsx,ts,tsx}": [
            "eslint --quiet --fix"
        ],
        "*.{json,js,ts,jsx,tsx,html}": [
            "prettier --write --ignore-unknown"
        ]
    }
}
